{
    "extends": [
        "@tsconfig/recommended/tsconfig.json",
        "@tsconfig/node20/tsconfig.json",
        "@tsconfig/next/tsconfig.json"
    ],
    "compilerOptions": {
        "paths": {
            "@src/*": ["./src/*"]
        },
        "target": "es6"
    },
    "include": [
        ".next/types/**/*.ts",
        "next-env.d.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./test/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
